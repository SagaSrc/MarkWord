<UserControl x:Class="MarkWord.WebDoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarkWord"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="1" BorderBrush="LightGray" MaxWidth="1900" Margin="15">
        <Grid Name="docFrame">
            <WindowsFormsHost  Name="docViewer" AllowDrop="False" Margin="0" ></WindowsFormsHost>
        </Grid>
    </Border>
</UserControl>
